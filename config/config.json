{   
    "DATA_ROOT": "/data/ephemeral/home/data",
    "SAVED_DIR": "./checkpoints",
    "CLASSES": [
        "finger-1", "finger-2", "finger-3", "finger-4", "finger-5",
        "finger-6", "finger-7", "finger-8", "finger-9", "finger-10",
        "finger-11", "finger-12", "finger-13", "finger-14", "finger-15",
        "finger-16", "finger-17", "finger-18", "finger-19", "Trapezium",
        "Trapezoid", "Capitate", "Hamate", "Scaphoid", "Lunate",
        "Triquetrum", "Pisiform", "Radius", "Ulna"
    ],
    "NUM_EPOCHS": 100,
    "BATCH_SIZE": 4,
    "LR": 0.0001,
    "VAL_INTERVER": 20,
    "model": {
        "type": "hrnet_ocr",
        "model_name": "hrnet_ocr",
        "pretrained": true,
        "original_size": 2048,
        "img_size": 512,
        "patch_size": 16,
        "use_checkpoint": true
    },
    "hrnet_config": {
       "aux_weight": 0.4,
       "use_checkpoint": true
    },
    "VAL_BATCH_SIZE": 4,
    "accumulation_steps": 4,
    "mixed_precision": true,
    "loss": {
        "type": "hrnet_ocr",
        "params": {
            "aux_weight": 0.4,
            "dice_weight": 0.7,
            "bce_weight": 0.3
        }
    },
    "trainer": {
        "aux_weight": 0.4
    },
    "lr_scheduler": {
        "type": "cosine",
        "t_initial": 50,
        "lr_min": 5e-6,
        "warmup_t": 5,
        "warmup_lr_init": 5e-7
    },
    "optimizer": {
        "type": "adamw",
        "weight_decay": 0.05,
        "betas": [0.9, 0.999],
        "eps": 1e-8
    },
    "training": {
       "mixed_precision": true,
       "accumulation_steps": 2,
       "gradient_clip_val": 1.0
    }
}